<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Settings.SettingsSoftwareControlControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,0,16,12">
            <custom:CardControl
                x:Name="_vantageCard"
                Margin="0,0,0,8"
                Icon="Prohibited24"
                Visibility="Collapsed">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl
                        Title="{x:Static resources:Resource.SettingsPage_DisableVantage_Title}"
                        Subtitle="{x:Static resources:Resource.SettingsPage_DisableVantage_Message}"
                        Info="{x:Static resources:Resource.SettingsPage_Common_RestartRecommended}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_vantageToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_DisableVantage_Title}"
                    Click="VantageToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl
                x:Name="_legionZoneCard"
                Margin="0,0,0,8"
                Icon="Prohibited24"
                Visibility="Collapsed">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl
                        Title="{x:Static resources:Resource.SettingsPage_DisableLegionZone_Title}"
                        Subtitle="{x:Static resources:Resource.SettingsPage_DisableLegionZone_Message}"
                        Info="{x:Static resources:Resource.SettingsPage_Common_RestartRecommended}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_legionZoneToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_DisableLegionZone_Title}"
                    Click="LegionZoneToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl
                x:Name="_legionSpaceCard"
                Margin="0,0,0,8"
                Icon="Prohibited24"
                Visibility="Collapsed">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl
                        Title="{x:Static resources:Resource.SettingsPage_DisableLegionSpace_Title}"
                        Subtitle="{x:Static resources:Resource.SettingsPage_DisableLegionSpace_Message}"
                        Info="{x:Static resources:Resource.SettingsPage_Common_RestartRecommended}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_legionSpaceToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_DisableLegionSpace_Title}"
                    Click="LegionSpaceToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl
                x:Name="_fnKeysCard"
                Margin="0,0,0,8"
                Icon="Prohibited24"
                Visibility="Collapsed">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl
                        Title="{x:Static resources:Resource.SettingsPage_DisableLenovoHotkeys_Title}"
                        Subtitle="{x:Static resources:Resource.SettingsPage_DisableLenovoHotkeys_Message}"
                        Info="{x:Static resources:Resource.SettingsPage_Common_RestartRecommended}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_fnKeysToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_DisableLenovoHotkeys_Title}"
                    Click="FnKeysToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
