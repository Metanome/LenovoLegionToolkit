<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Settings.SettingsAppBehaviorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,0,16,12">
            <custom:CardControl Margin="0,0,0,8" Icon="Games24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.AutomationPage_Game_Detection_Title}" Subtitle="{x:Static resources:Resource.AutomationPage_Game_Detection_Sub_Title}" />
                </custom:CardControl.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <ComboBox x:Name="_detectionModeComboBox" SelectionChanged="DetectionModeComboBox_SelectionChanged">
                            <ComboBoxItem Content="{x:Static resources:Resource.AutomationPage_Game_Detection_Method_Auto}" Tag="Auto" />
                            <ComboBoxItem Content="{x:Static resources:Resource.AutomationPage_Game_Detection_Method_Discrete_GPU}" Tag="Gpu" />
                            <ComboBoxItem Content="{x:Static resources:Resource.AutomationPage_Game_Detection_Method_List}" Tag="Store" />
                            <ComboBoxItem Content="{x:Static resources:Resource.AutomationPage_Game_Detection_Method_Game_Mode}" Tag="GameMode" />
                        </ComboBox>
                    </StackPanel>
                    <wpfui:Button
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_ExcludeProcesses_Title}"
                        Click="ExcludeProcesses_Click"
                        FontSize="20"
                        Icon="Settings24"
                        ToolTip="{x:Static resources:Resource.SettingsPage_ExcludeProcesses_Title}" />
                </Grid>
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="Play24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_Autorun_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_Autorun_Message}" />
                </custom:CardControl.Header>
                <ComboBox
                    x:Name="_autorunComboBox"
                    MinWidth="160"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_Autorun_Title}"
                    MaxDropDownHeight="Auto"
                    SelectionChanged="AutorunComboBox_SelectionChanged"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="ArrowMinimize24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_MinimizeToTray_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_MinimizeToTray_Message}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_minimizeToTrayToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_MinimizeToTray_Title}"
                    Click="MinimizeToTrayToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="DismissSquare24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_MinimizeOnClose_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_MinimizeOnClose_Message}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_minimizeOnCloseToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_MinimizeOnClose_Title}"
                    Click="MinimizeOnCloseToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="LockClosed24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_LockWindowSize_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_LockWindowSize_Message}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_lockWindowSizeToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_LockWindowSize_Title}"
                    Click="LockWindowSizeToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="Bug24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_EnableLogging_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_EnableLogging_Message}" />
                </custom:CardControl.Header>
                <wpfui:ToggleSwitch
                    x:Name="_enableLoggingToggle"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_EnableLogging_Title}"
                    Click="EnableLoggingToggle_Click"
                    Visibility="Hidden" />
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="DeveloperBoard24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_UseNewSensorDashboard_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_UseNewSensorDashboard_Message}" />
                </custom:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="_dashboardCustomButton"
                        Width="100"
                        Height="35"
                        Margin="5,0,8,0"
                        VerticalAlignment="Center"
                        Click="DashboardCustomButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="{x:Static resources:Resource.DashboardPage_Customize}" />
                        </StackPanel>
                    </Button>
                    <wpfui:ToggleSwitch
                        x:Name="_useNewSensorDashboardToggle"
                        Margin="5,0,0,8"
                        AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_UseNewSensorDashboard_Title}"
                        Click="UseNewSensorDashboard_Toggle"
                        Visibility="Hidden" />
                </StackPanel>
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="ProjectionScreen24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_FloatingGadgets_Title}" Subtitle="{x:Static resources:Resource.SettingsPage_FloatingGadgets_Message}" />
                </custom:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <wpfui:NumberBox
                        x:Name="_floatingGadgetsInterval"
                        Width="60"
                        Margin="5,0,8,0"
                        VerticalAlignment="Center"
                        Maximum="5"
                        Minimum="1"
                        SpinButtonPlacementMode="Compact"
                        ToolTip="{x:Static resources:Resource.SettingsPage_FloatingGadgets_Tooltip}"
                        ValueChanged="FloatingGadgetsInput_ValueChanged"
                        Visibility="Hidden"
                        Value="1" />
                    <ComboBox
                        x:Name="_floatingGadgetsStyleComboBox"
                        Width="100"
                        Margin="5,0,8,0"
                        VerticalAlignment="Center"
                        SelectionChanged="StyleComboBox_SelectionChanged"
                        Visibility="Hidden">
                        <ComboBoxItem Content="{x:Static resources:Resource.Default}" Tag="Default" />
                        <ComboBoxItem Content="{x:Static resources:Resource.FloatingGadget_Style_Simple}" Tag="Simple" />
                    </ComboBox>
                    <Button
                        x:Name="_customButton"
                        Width="100"
                        Height="35"
                        Margin="5,0,8,0"
                        VerticalAlignment="Center"
                        Click="CustomButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="{x:Static resources:Resource.DashboardPage_Customize}" />
                        </StackPanel>
                    </Button>
                    <wpfui:ToggleSwitch
                        x:Name="_floatingGadgetsToggle"
                        Margin="5,0,0,8"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_FloatingGadgets_Title}"
                        Click="FloatingGadgets_Click"
                        Visibility="Hidden" />
                </StackPanel>
            </custom:CardControl>
            <custom:CardControl Margin="0,0,0,8" Icon="Window24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.ArgumentWindow_Edit_Title}" Subtitle="{x:Static resources:Resource.ArgumentWindow_Edit_Message}" />
                </custom:CardControl.Header>
                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="_argumentWindow"
                        Width="130"
                        Height="35"
                        Margin="5,0,8,0"
                        VerticalAlignment="Center"
                        Click="ArgumentWindowButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="{x:Static resources:Resource.ArgumentWindow_Edit_Title}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </custom:CardControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
