<ui:UiWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Overclocking.Amd.AmdOverclocking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AMD Precision Boost Overclocking"
    Width="1050"
    Height="870"
    ExtendsContentIntoTitleBar="True"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style
            x:Key="ModernNumberBox"
            BasedOn="{StaticResource {x:Type ui:NumberBox}}"
            TargetType="ui:NumberBox">
            <Setter Property="Width" Value="140" />
            <Setter Property="MinWidth" Value="140" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="ClearButtonEnabled" Value="True" />
            <Setter Property="PlaceholderText" Value="--" />
            <Setter Property="SpinButtonPlacementMode" Value="Inline" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
        </Style>

        <Style x:Key="RowSeparator" TargetType="Rectangle">
            <Setter Property="Height" Value="1" />
            <Setter Property="Fill" Value="{DynamicResource DividerStrokeColorDefaultBrush}" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>

        <Style x:Key="ModernExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <DockPanel>
                                <ToggleButton
                                    x:Name="HeaderSite"
                                    Padding="16,12"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="{TemplateBinding Header}"
                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                    DockPanel.Dock="Top"
                                    Focusable="False"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter
                                                        VerticalAlignment="Center"
                                                        Content="{TemplateBinding Content}"
                                                        ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                    <ui:SymbolIcon
                                                        Grid.Column="1"
                                                        FontSize="16"
                                                        RenderTransformOrigin="0.5,0.5"
                                                        Symbol="ChevronDown24">
                                                        <ui:SymbolIcon.RenderTransform>
                                                            <RotateTransform x:Name="ArrowTransform" Angle="0" />
                                                        </ui:SymbolIcon.RenderTransform>
                                                    </ui:SymbolIcon>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="ArrowTransform"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    To="180"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="ArrowTransform"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    To="0"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ContentPresenter
                                    x:Name="ExpandSite"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    DockPanel.Dock="Bottom"
                                    Visibility="Collapsed">
                                    <ContentPresenter.LayoutTransform>
                                        <ScaleTransform x:Name="ExpandSiteScale" ScaleY="0" />
                                    </ContentPresenter.LayoutTransform>
                                </ContentPresenter>
                            </DockPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="HeaderSite" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandSite" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation
                                                Storyboard.TargetName="ExpandSiteScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="0"
                                                To="1"
                                                Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="ExpandSite"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="1"
                                                Duration="0:0:0.25" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="ExpandSiteScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0"
                                                Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="ExpandSite"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0"
                                                Duration="0:0:0.2" />
                                            <ObjectAnimationUsingKeyFrames
                                                BeginTime="0:0:0.2"
                                                Storyboard.TargetName="ExpandSite"
                                                Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid Background="{DynamicResource ApplicationPageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="AMD Precision Boost Overclocking"
            Grid.Row="0"
            Margin="5" />

        <StackPanel Grid.Row="1" Margin="24,0,24,10">
            <ui:InfoBar
                Title="{x:Static resources:Resource.AmdOverclocking_Caution_Title}"
                IsClosable="False"
                IsOpen="True"
                Message="{x:Static resources:Resource.AmdOverclocking_Caution_Message}"
                Severity="Warning" />
            <ui:InfoBar
                x:Name="_statusInfoBar"
                Title="{x:Static resources:Resource.AmdOverclocking_Status_Title}"
                Margin="0,5,0,0"
                IsOpen="False"
                Severity="Informational" />
        </StackPanel>

        <Border
            Grid.Row="2"
            Margin="24,5,24,10"
            Padding="20,15"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:SymbolIcon
                        Margin="0,0,15,0"
                        FontSize="24"
                        Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                        Symbol="PointScan24" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static resources:Resource.AmdOverclocking_FMax_Frequency_Title}" />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static resources:Resource.AmdOverclocking_FMax_Frequency_Message}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <StackPanel
                            Margin="0,0,10,0"
                            IsEnabled="{Binding ElementName=_fMaxToggle, Path=IsChecked}"
                            Orientation="Horizontal">
                            <ui:NumberBox
                                x:Name="_fMaxNumberBox"
                                Width="100"
                                SpinButtonPlacementMode="Compact" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="11"
                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                Text="MHz" />
                        </StackPanel>

                        <ui:ToggleSwitch
                            x:Name="_fMaxToggle"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="True" />
                    </StackPanel>
                </Grid>

                <Rectangle
                    Grid.Column="1"
                    Width="1"
                    Margin="20,2"
                    Fill="{DynamicResource DividerStrokeColorDefaultBrush}" />

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:SymbolIcon
                        Margin="0,0,15,0"
                        FontSize="24"
                        Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                        Symbol="Games24" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static resources:Resource.AmdOverclocking_X3D_Gaming_Mode_Title}" />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static resources:Resource.AmdOverclocking_X3D_Gaming_Mode_Message}" />
                    </StackPanel>
                    <ui:ToggleSwitch
                        x:Name="_x3dGamingToggle"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Checked="X3DGamingModeEnabled_OnClick"
                        Unchecked="X3DGamingModeDisabled_OnClick" />
                </Grid>
            </Grid>
        </Border>

        <ScrollViewer
            Grid.Row="3"
            Padding="24,0,24,20"
            Focusable="False">
            <StackPanel>
                <Grid Margin="4,10,4,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <ui:SymbolIcon Foreground="{DynamicResource TextFillColorSecondaryBrush}" Symbol="ArrowAutofitContent24" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{x:Static resources:Resource.AmdOverclocking_Per_Core_Title}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static resources:Resource.AmdOverclocking_Global_Offset}" />
                        <ui:Button
                            Margin="0,0,5,0"
                            Click="OnGlobalDecrementClick"
                            Icon="Subtract24"
                            ToolTip="{x:Static resources:Resource.AmdOverclocking_Global_Plus}" />
                        <ui:Button
                            Click="OnGlobalIncrementClick"
                            Icon="Add24"
                            ToolTip="{x:Static resources:Resource.AmdOverclocking_Global_Dim}" />
                    </StackPanel>
                </Grid>

                <ItemsControl x:Name="_ccdItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander IsExpanded="{Binding IsExpanded}" Style="{StaticResource ModernExpanderStyle}">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="{Binding HeaderTitle}" />
                                    </StackPanel>
                                </Expander.Header>

                                <ItemsControl ItemsSource="{Binding Cores}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Height="44"
                                                Margin="4,2"
                                                Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Rectangle
                                                    Grid.ColumnSpan="2"
                                                    Margin="10,0"
                                                    Style="{StaticResource RowSeparator}" />

                                                <StackPanel
                                                    Margin="15,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontWeight="Medium"
                                                        Text="{Binding DisplayName}" />
                                                </StackPanel>

                                                <ui:NumberBox
                                                    Grid.Column="1"
                                                    Margin="0,0,15,0"
                                                    HorizontalAlignment="Right"
                                                    IsEnabled="{Binding IsActive}"
                                                    Style="{StaticResource ModernNumberBox}"
                                                    Value="{Binding OffsetValue, Mode=TwoWay}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <Border
            Grid.Row="4"
            Padding="24,16"
            Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
            BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <ui:Button
                        x:Name="_loadButton"
                        Margin="0,0,5,0"
                        Appearance="Transparent"
                        Click="OnLoadClick"
                        Content="{x:Static resources:Resource.Import}"
                        Icon="ArrowImport24" />
                    <ui:Button
                        x:Name="_saveButton"
                        Appearance="Transparent"
                        Click="OnSaveClick"
                        Content="{x:Static resources:Resource.Export}"
                        Icon="ArrowExport24" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <ui:Button
                        x:Name="_refreshButton"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        Appearance="Secondary"
                        Click="OnResetClick"
                        Content="{x:Static resources:Resource.Reset}"
                        Icon="ArrowCounterclockwise24" />
                    <ui:Button
                        x:Name="_applyButton"
                        MinWidth="160"
                        Appearance="Primary"
                        Click="OnApplyClick"
                        Content="{x:Static resources:Resource.AmdOverclocking_Apply_Changes}"
                        FontWeight="Bold"
                        Icon="Checkmark24" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ui:UiWindow>